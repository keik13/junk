<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="client" class="com.yet.spring.core.beans.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John Smith"/>
    </bean>

    <bean id="event" class="com.yet.spring.core.events.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="consoleEventLogger" class="com.yet.spring.core.loggers.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="com.yet.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="Logs"/>
    </bean>
    <bean id="cacheFileEventLogger" class="com.yet.spring.core.loggers.CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg index="0" value="Logs"/>
        <constructor-arg index="1" value="10"/>
    </bean>

    <bean id="app" class="com.yet.spring.core.App">
        <constructor-arg index="0" ref="client"/>
        <constructor-arg index="1" ref="consoleEventLogger"/>
    </bean>
    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
</beans>